<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kumpulan Data</title>
  <!-- Tambahkan Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    
    <div class="row mt-4">
      <div class="col-md-6 mx-auto">
        <div class="card">
            <h1>Kumpulan Data</h1>
          <div class="card-body">
            <a href="/tambah" class="btn btn-primary mb-3">Tambah Data</a>
            <ul class="list-group">
              <% data.forEach(function(item) { %>
                <li class="list-group-item">
                  <strong>ID:</strong> <%= item._id %><br>
                  <strong>Nama:</strong> <%= item.nama %><br>
                  <strong>Tanggal:</strong> <%= item.tanggal %> <br>
                  <a href="/details?id=<%= item._id%>" class="btn btn-success mt-2">Lihat</a>
                </li>
              <% }); %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tambahkan Bootstrap JS (popper.js dan bootstrap.js) -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
