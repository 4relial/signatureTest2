<!-- views/submit.ejs -->
<!DOCTYPE html>
<html>

<head>
  <title>Form Submit</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Data yang diinputkan:</h2>
            <p class="card-text"><strong>Nama:</strong> <%= name %></p>
            <p class="card-text"><strong>Tanggal:</strong> <%= date %></p>
            <p class="card-text"><strong>Deskripsi:</strong> <%= description %></p>
            <h2>Tanda Tangan:</h2>
            <div class="text-center">
              <img src="<%= signature %>" alt="Tanda Tangan" style="max-width: 300px;" class="img-fluid rounded">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
